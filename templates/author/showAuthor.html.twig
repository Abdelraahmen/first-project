{% extends 'base.html.twig' %}

{% block title %}Détails de l'auteur{% endblock %}

{% block body %}
    <h1>{{ author.username|upper }}</h1>

    <img src="{{ asset(author.picture) }}" alt="{{ author.username }}" width="150">

    <p>Email : {{ author.email }}</p>
    <p>Nombre de livres : {{ author.nb_books }}</p>

    <a href="{{ path('listauthor') }}">← Retour à la liste des auteurs</a>
{% endblock %}
