{% extends 'base.html.twig' %}

{% block title %}Liste des Authors{% endblock %}

{% block body %}
<h1>Liste des Authors</h1>

{% if list is not empty %}
    <table border="1" cellspacing="0" cellpadding="8">
        <thead>
            <tr>
                <th>Username</th>
                <th>Email</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for author in list %}
                <tr>
                    <td>{{ author.username }}</td>
                    <td>{{ author.email }}</td>
                    <td>
                        <a href="{{ path('author_details', {'id': author.id}) }}" class="btn btn-info">Details</a>
                        <a href="{{ path('author_edit', {'id': author.id}) }}" class="btn btn-warning">Update</a>
                        <a href="{{ path('author_delete', {'id': author.id}) }}" class="btn btn-danger"
                           onclick="return confirm('Are you sure you want to delete this author?');">Delete</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% else %}
    <p>No authors found.</p>
{% endif %}
{% endblock %}
